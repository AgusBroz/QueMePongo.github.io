<% if @guardarropa%>
<div>
  <div class="prendas-view">
    <table class="guardarropa">
        <tr>  <%= render 'atributos_prenda', show: @prendas.present? %> </tr>
        <% @prendas.each do |p| %>
            <%= render 'prenda', prenda: p %>
        <%end%>
    </table>
  </div>
  <div class= "interact-btn">
      <%= link_to "Agregar Prenda", new_prenda_path(:guardarropa_id => @guardarropa.id)%>
      <%= link_to_if @prendas.present?, "Crear Atuendo",  new_guardarropa_atuendo_path(:guardarropa_id => @guardarropa.id), class: "interact-btn" %>
      <%= link_to_if @prendas.present?, "Crear Atuendo Aleatorio",  "/guardarropas/#{@guardarropa.id}/atuendo-aleatorio", class: "interact-btn" %>
      <%= link_to "Ver Atuendos", guardarropa_atuendos_path(:guardarropa_id => @guardarropa.id) %>
      <%= link_to "Volver", guardarropas_path %>
  </div>
</div> 
<% else %>
<%= render  "errores/error", 
descripcion: "Â¡No encontramos la pagina que esta buscando!",
status_code: "401"
%>

<% end %>

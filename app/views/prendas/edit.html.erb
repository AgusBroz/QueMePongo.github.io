<div class="new-edit-form">
<h1>Editar Prenda</h1>
<%= form_for @prenda do |f|%>
    <p>
        <%= f.label :categoria%><br />
        <%= f.text_field :categoria%>
    </p>
    <p>
        <%= f.label :color%><br />
        <%= f.text_field :color%>
    </p>
    <p>
        <%= f.label :color_secundario%><br />
        <%= f.text_field :color_secundario%>
    </p>
    <p>
        <%= f.label :textura%><br />
        <%= f.text_field :textura%>
    </p>
    <p>
        <%= f.label :tipo%><br />
        <%= f.text_field :tipo%>
    </p>
    <p>
        <%= f.submit "Guardar Cambios"%>
    </p>
<%end%>
</div>